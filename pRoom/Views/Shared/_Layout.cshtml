    <script src="~/event/datepick/bootstrap.min.js"></script>
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.min.min.js"></script>*@

    <script src="~/event/js/jalaali.js"></script>
    <script src="~/event/js/jquery.Bootstrap-PersianDateTimePicker.js"></script>

</body>

</html>
